export type Props = {
  activePage: number,
  numPages: number,
  renderPage: (props: PageProps) => React.Element<any>,
  animateHeight: boolean,
  transitionDuration: number,
  transitionTimingFunction: string,
  prefixer: Prefixer,
  fillParent?: boolean,
  className?: string,
